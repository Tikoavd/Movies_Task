<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space_8">
            <ImageButton
                android:id="@+id/vBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_revert"
                android:background="@color/transparent"
                android:paddingTop="@dimen/space_32"
                android:layout_margin="@dimen/space_8"
                app:tint="?colorSecondary" />
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movies_list_page_title"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vBackButton"
                android:layout_marginHorizontal="@dimen/space_8"
                android:layout_marginVertical="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_8"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGenres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                android:orientation="horizontal"
                tools:listitem="@layout/genre_item" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgPoster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvGenres"
                android:src="@drawable/ic_warning"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/space_8"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Day"
                />

            <ImageView
                android:id="@+id/icRating"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_star"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgPoster"
                android:layout_marginHorizontal="@dimen/space_8"
                android:layout_marginTop="@dimen/space_8"
                />

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="4.78"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@id/icRating"
                app:layout_constraintTop_toTopOf="@id/icRating"
                app:layout_constraintBottom_toBottomOf="@id/icRating"
                android:layout_marginHorizontal="@dimen/space_8" />

            <TextView
                android:id="@+id/tvReleaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                tools:text="Release date: 2025-11-28"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRating"
                android:layout_marginHorizontal="@dimen/space_8"
                android:layout_marginVertical="@dimen/space_8"/>

            <TextView
                android:id="@+id/tvOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                tools:text="Some Overview"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvReleaseDate"
                android:layout_marginHorizontal="@dimen/space_8"
                android:layout_marginVertical="@dimen/space_8"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>